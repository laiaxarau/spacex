---
import { icons } from "./Icons";

interface Props {
  name: string;
  size?: string;
  customClass?: string;
}

const { name, size, customClass } = Astro.props;
---

<svg
  class={customClass ? customClass : ""}
  height={size ? size : "24"}
  width={size ? size : "24"}
  viewBox="0 0 20 20"
  ><path d={icons[name]}></path>
</svg>
